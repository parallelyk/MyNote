<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mynote"
    android:versionCode="1"
    android:versionName="1.0" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.mynote.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.mynote.ListViewActivity"
            android:label="@string/title_activity_list_view" >
        </activity>
        <activity
            android:name="com.example.mynote.AddItemActivity"
            android:label="@string/title_activity_add_item" >
        </activity>
        <activity
            android:name="com.example.mynote.EditItemActivity"
            android:label="@string/title_activity_edit_item" >
        </activity>
    </application>
    <!-- 授权访问网络 -->
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
